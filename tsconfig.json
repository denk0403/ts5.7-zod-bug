{
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "index.ts"
  ],
  "references": [
    {
      "path": "./packages/foo/tsconfig.json"
    },
    {
      "path": "./packages/test-wrapper/tsconfig.json"
    }
  ]
}